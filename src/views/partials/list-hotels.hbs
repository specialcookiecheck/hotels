<table class="table is-fullwidth">
  <thead>
    <tr>
      <th>Hotel name</th>
      <th>City</th>
      <th>Airport</th>
    </tr>
  </thead>
  <tbody>
    {{#each hotelList.hotels}}
      <tr>
        <td>
          {{name}}
        </td>
        <td>
          {{city}}
        </td>
        <td>
          {{airport}}
        </td>
        <td>
          <a href="/hotellist/{{../listId}}/deletehotel/{{_id}}" class="ui icon button">
            <i class="fas fa-trash"></i>
          </a>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>